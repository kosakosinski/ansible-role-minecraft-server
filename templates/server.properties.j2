#Game settings
gamemode={{ minecraft_gamemode }}
force-gamemode=false
difficulty={{ minecraft_difficulty }}
hardcore={{ minecraft_hardcore_mode }}
allow-flight=false
allow-nether={{ minecraft_allow_nether }}
pvp={{ minecraft_allow_pvp }}
view-distance=10
max-build-height=256
enable-command-block=false

# World settings
level-name=world
level-type={{ minecraft_level_type }}
level-seed=
generator-settings=
generate-structures=true
spawn-npcs=true
spawn-animals=true
spawn-monsters=true
spawn-protection=16
max-tick-time=60000
max-world-size=29999984

# Server settings
## Gerneral
max-players=20
player-idle-timeout=0
broadcast-console-to-ops=true
op-permission-level=4
function-permission-level=2

## Motto of the day
motd={{ minecraft_motd }}

## Resource packs
resource-pack=
resource-pack-sha1=

## Whitelisting
white-list=false
enforce-whitelist=false

## Network
use-native-transport=true
network-compression-threshold=256
prevent-proxy-connections=false

## Server listening address and ports
server-ip={{ minecraft_bind_address }}
server-port={{ minecraft_server_port }}
query.port={{ minecraft_server_port }}

## RCON properties
enable-rcon=false
rcon.port={{ minecraft_rcon_port }}
rcon.password=
broadcast-rcon-to-ops=true

## Server observability
enable-status=true
online-mode=true
enable-query=false
snooper-enabled=false